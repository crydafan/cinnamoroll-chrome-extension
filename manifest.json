{
  "name": "シナモンと一緒",
  "description": "ふわふわ～♪ Let Cinnamoroll keep you company while you browse! Drag him anywhere and click for cute messages.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "cinnamoroll.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/cinnamoroll.js"],
      "css": ["src/cinnamoroll.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*.gif", "src/assets/*.png", "src/assets/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
